<%= tag.span data: { controller: "toggle", toggle_toggle_class: "hidden" }, class: "relative" do %>
  <%= tag.button class: ["h-full", tab.classes(selected:)], data: { action: "click->toggle#toggle click@window->toggle#hide pagehide@window->toggle#hide" } do %>
    <%= tag.span icons.render(icon), class: "text-gray-400" if icon %>
    <%= tag.span text, class: ["text-gray-500 group-hover:text-gray-600", "font-semibold": selected] %>
    <%= tag.span icons.chevron_down, class: "text-gray-400" %>
  <% end %>

  <%= tag.div items, class: ["hidden", "z-40 absolute mt-1 w-60 rounded border border-gray-300 shadow-lg py-1 bg-white divide-y divide-gray-200"], data: { toggle_target: "toggleable" } %>
<% end %>
