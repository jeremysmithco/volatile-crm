<%# locals: (link:, text:, icon: nil, selected: false, counter: nil, threshold: nil) -%>
<%= link_to link, class: tab_nav_tab_classes(selected: selected) do %>
  <%= tag.span(tab_nav_icon_svg(icon), class: tab_nav_icon_classes) if icon.present? %>
  <%= tag.span(text, class: tab_nav_text_classes(selected: selected)) %>
  <%= tag.span(counter, class: tab_nav_counter_classes(counter, threshold)) if counter.present? %>
<% end %>
