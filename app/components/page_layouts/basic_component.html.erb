<%= tag.div(class: "border border-gray-200 p-6 rounded-md mb-10") do %>
  <%= tag.div(class: "flex justify-between items-end pb-4 border-b border-gray-100 mb-6") do %>
    <%= tag.div do %>
      <%= tag.h3(class: "flex items-center text-lg leading-none font-semibold h-8") do %>
        <% if parent.present?  %>
          <%= link_to parent.title, parent.link, class: "text-cyan-500" %>
          <%= tag.span(render("icons/divider"), class: "text-gray-300") %>
        <% end %>

        <%= tag.span(title) %>
      <% end %>
    <% end %>

    <%= tag.div(action, class: "space-x-2") %>
  <% end %>

  <%= body %>
<% end %>
