<%= tag.g(transform: "translate(0, #{offset})") do %>
  <%= tag.rect(x: line.x, y: line.y, width: line.width, height: line.height, fill: line.color) %>

  <%= tag.text(scale, x: label.x, y: label.y, fill: label.color, "font-size": label.size, "alignment-baseline": "middle", "text-anchor": "end") %>
<% end %>
