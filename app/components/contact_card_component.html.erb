<%= link_to contact_path(contact), class: "flex bg-gray-50 border border-gray-200 hover:bg-cyan-50 hover:border-cyan-200 rounded-lg p-4" do %>
  <%= tag.div(class: "flex") do %>
    <%= tag.div(render(AvatarComponent.new(contact: contact)), class: "w-28 h-24 mb-4") %>

    <%= tag.div(class: "flex-1") do %>
      <%= tag.div do %>
        <%= tag.h3(contact.full_name, class: "text-lg font-semibold text-gray-600") %>
        <%= tag.div(contact.company.name, class: "text-gray-500") %>
      <% end %>

      <% if contact.location.present? %>
        <%= tag.div(class: "flex space-x-1 items-center mt-2") do %>
          <%= tag.span(render("icons/map-pin"), class: "text-gray-500") %>
          <%= tag.div(contact.location, class: "text-sm text-gray-500") %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
